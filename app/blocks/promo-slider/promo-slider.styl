.promo-slider
	position relative
	background-color #eee
	@media screen and (max-width: $mobile-width)
		padding-top 80px

	&__slider-container
		width 100%
		height 100%

	&__slider-slide
		display flex
		justify-content center
		align-items: center

	&__wrapper-slide
		position relative
		width 100%
		height 100%
		@media screen and (max-width: $mobile-width)
			width 90%

	&__slide-img
		position relative
		width 100%
		height 500px
		background-size cover
		@media screen and (max-width: $mobile-width)
			height 300px

	&__wrap-btn
		position relative
		max-width 1140px
		margin 0 auto

	&__button-more
		position absolute
		height 59px
		border 3px solid #ffed00
		display inline-block
		line-height 53px
		text-align center
		left 0
		bottom 50px
		color white
		text-decoration none
		padding 0 34px
		transition all .25s
		&:hover
			border-color white
			color #FFED00
		@media screen and (max-width: $laptop-width)
			left 20px
		@media screen and (max-width: $mobile-width)
			height 40px
			border 1px solid #ffed00
			padding 0 15px
			line-height 38px
			bottom 20px


