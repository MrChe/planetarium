.header
	position relative
	height 170px
	background-color #157ec2
	@media screen and (max-width: $mobile-width)
		height 80px
		position fixed
		top 0
		left 0
		right 0
		z-index 10

	&__logo
		position relative
		max-width 420px
		height 135px
		margin-top 16px
		display inline-block
		@media screen and (max-width: $mobile-width)
			width 185px
			height 60px
			margin-top 9px

	&__logo-img
		position relative
		max-width 100%
		height auto
		display block

	&__navigation
		position relative
		display flex
		justify-content flex-end
		align-items center
		margin-top 40px
		margin-bottom 40px
		padding-left 0
		list-style-type none

	&__navigation-item
		position relative
		margin-right 20px
		&:last-child
			margin-right 0
		@media screen and (max-width: $laptop-width)
			margin-right 10px

	&__navigation-link
		position relative
		font-size 16px
		color white
		text-transform uppercase
		text-decoration none
		transition all .25s
		&:hover
			color #FFF72E
		@media screen and (max-width: $laptop-width)
			font-size 14px

	&__contact-info
		position relative
		display flex
		justify-content flex-end

	&__phone
		position relative
		display flex
		color white
		align-items center
		margin-right 50px

	&__number-phone-wrap
		position relative
		display flex
		flex-direction column
		margin-right 5px

	&__sub-number-phone
		position relative
		font-size 13px
		margin-bottom 1px
		&:last-child
			margin-bottom 0

	&__number-phone
		position relative
		font-size 34px

	&__socials
		position relative
		display flex

	&__social-link
		position relative
		display block
		margin-right 20px
		&:last-child
			margin-right 0
		&:hover
			svg
				fill white
		svg
			width 40px
			height 40px
			fill #fff72e
			transition all .25s
