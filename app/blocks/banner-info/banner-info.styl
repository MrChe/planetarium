.banner-info
	position relative
	padding-top 40px
	padding-bottom 40px
	background url('/assets/images/bg-banner.jpg') no-repeat center center
	background-size cover
	width 100%
	height 100%
	@media screen and (max-width: $mobile-width)
		padding-top 100px
		padding-bottom 20px

	&__info-subscriptions
		position relative

	&__info-subscriptions-title
		position relative
		font-size 36px
		color white
		font-family $avenirBold
		margin-bottom 25px
		@media screen and (max-width: $mobile-width)
			font-size 24px
			margin-bottom 10px

	&__info-subscriptions-title-bold
		color #FEF62F

	&__text
		position relative
		font-size 16px
		color white
		line-height 24px
		@media screen and (max-width: $mobile-width)
			font-size 14px
			line-height 18px

	&__wrap-img
		position relative
		width 300px
		height 300px
		overflow hidden
		border-radius 50%
		display flex
		flex-direction column
		justify-content center
		align-items center
		@media screen and (max-width: $laptop-width)
			width 200px
			height 200px
		@media screen and (max-width: $mobile-width)
			margin 30px auto


	&__img
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		display block
		max-width 100%
		height auto
