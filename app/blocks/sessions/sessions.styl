.sessions
	position relative
	background url('/assets/images/bg-session.jpg') no-repeat center center
	background-size cover
	width 100%
	height 100%
	padding-top 40px
	padding-bottom 40px
	text-align center
	@media screen and (max-width: $mobile-width)
		padding-top 20px
		padding-bottom 20px

	&__title
		position relative
		font-size 36px
		margin-top 0
		margin-bottom 40px
		color white
		text-transform uppercase
		@media screen and (max-width: $mobile-width)
			font-size 24px
			margin-bottom 20px

	&__title-txt-bold
		position relative
		color #eee026
		font-family $avenirBold

	&__card
		position relative
		cursor pointer
		display block
		text-decoration none
		&:hover
			.sessions__card-title
				color white
		@media screen and (max-width: $laptop-width)
			margin-bottom 30px

	&__wrap-card-img
		position relative
		display block
		font-size 0
		height 350px
		@media screen and (max-width: $laptop-width)
			height 250px

	&__card-img
		position relative
		max-width 100%
		height 100%

	&__card-title
		position relative
		margin-top 20px
		display block
		color #eee026
		font-size 20px
		transition all .25s

	&__link-all
		position relative
		display inline-block
		font-size 16px
		margin-top 35px
		text-decoration none
		color white
		transition all .25s
		&:hover
			color #fcea00
		@media screen and (max-width: $mobile-width)
			margin-top 0

	&__link-all-icon
		position relative
		width 28px
		height 28px
		vertical-align middle
		margin-left 5px
