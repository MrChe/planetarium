.news-slider
	position relative
	background-color #8399BB
	padding-top 40px
	padding-bottom 40px
	@media screen and (max-width: $mobile-width)
		padding-top 20px
		padding-bottom 20px

	&__title
		position relative
		text-align center
		text-transform uppercase
		color #FCEA00
		font-size 36px
		margin-top 0
		margin-bottom 40px
		font-family $robotoBold
		@media screen and (max-width: $mobile-width)
			font-size 24px
			margin-bottom 20px

	&__slider-container
		width 100%
		height 100%

	&__slider-slide
		display: flex;
		justify-content: center;
		align-items: center;
		&.swiper-slide-prev
		&.swiper-slide-next
			&:after
				content ''
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				background-color rgba(131, 153, 187, .6)

	&__card
		position relative
		padding 40px
		background-color white
		@media screen and (max-width: $laptop-width)
			padding 20px
		@media screen and (max-width: $mobile-width)
			width 90%
			padding 10px

	&__card-wrap
		position relative
		display flex

	&__card-col
		position relative
		margin-right 20px
		// width 50%
		&:last-child
			margin-right 0
		@media screen and (max-width: $laptop-width)
			margin-right 20px

	&__card-title
		position relative
		color #161B21
		font-size 32px
		margin-top 0
		font-weight 300
		padding-bottom 20px
		margin-bottom 30px
		border-bottom 1px solid #D2D2D2
		@media screen and (max-width: $mobile-width)
			font-size 18px
			padding-bottom 10px
			margin-bottom 10px

	&__card-text
		position relative
		color #161B21
		font-size 18px
		line-height 24px
		margin-bottom 20px
		@media screen and (max-width: $mobile-width)
			font-size 14px
			line-height 18px
			margin-bottom 10px


	&__card-link-more
		position relative
		font-size 20px
		color #161B21
		text-decoration none
		&:hover
			text-decoration underline
		@media screen and (max-width: $mobile-width)
			font-size 16px

	&__card-img
		position relative
		display block
		max-width 375px
		max-height 375px
		margin 0 auto
		@media screen and (max-width: $desktop-width)
			max-width 275px
			max-height 275px
		@media screen and (max-width: $laptop-width)
			max-width 175px
			max-height 175px
		@media screen and (max-width: $mobile-width)
			max-width 125px
			max-height 125px

